generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model products {
  id          Int         @id @default(autoincrement())
  name        String
  price       Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  type        ProductType
  description String?     @db.Text
}

model customers {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductType {
  ROOM
  SERVICE
}
